<div class="col-6 offset-3">
	{{ form_start(form) }}
	<div class="form-group">
		{{ form_label(form.nom, "Titre du produit")}}
		{{ form_widget(form.nom, {'attr':{'class':'form-control'}})}}
	</div>
	<div class="form-group">
		{{ form_label(form.prix, "Prix")}}
		{{ form_widget(form.prix, {'attr':{'class':'form-control'}})}}
	</div>
	<div class="form-group">
		{{ form_label(form.description, "Description")}}
		{{ form_widget(form.description, {'attr':{'class':'form-control'}})}}
	</div>
	<div class="form-group">
		{{ form_label(form.categories, "Categories")}}
		{{ form_widget(form.categories, {'attr':{'class':'form-control'}})}}
	</div>
	<div class="form-group">
		{{ form_label(form.image, "Image du produit")}}
		{{ form_widget(form.image, {'attr':{'class':'form-control'}})}}
	</div>
	<div class="form-group">
		{{ form_label(form.envoyer) }}
		{{ form_widget(form.envoyer,{'attr':{'class':'btn btn-primary'}}) }}
	</div>
	{{ form_end(form) }}
</div>
